<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingRight="@dimen/_12sdp"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_16sdp">
        <ImageView
            android:id="@+id/closePopupButton"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            style="@style/TextAppearance.AppCompat.Button"
            android:src="@drawable/ic_close"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/_16sdp"/>
        <TextView
            android:id="@+id/headerPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/IsyaratToTextHeader"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/sanspro_reguler"
            android:textColor="@color/black3333"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/_8sdp"/>
        <TextView
            android:id="@+id/subPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/IsyaratToTextSub"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/sanspro_reguler"
            android:textColor="@color/black3333"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/_32sdp"/>
        <Button
            android:id="@+id/startNoTutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:background="@drawable/bg_button"
            android:layout_marginBottom="@dimen/_16sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"/>
        <Button
            android:id="@+id/startWithTutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_w_tutorial"
            android:background="@drawable/bg_btn_neg"
            android:textColor="@color/mColor"
            android:textSize="@dimen/_14sdp"/>
    </LinearLayout>
</LinearLayout>