<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".fragments.FragmentPopupTutorial">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_white"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imageTutorial"
                android:layout_width="@dimen/_158sdp"
                android:layout_height="@dimen/_158sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_first_tutorial"
                android:layout_marginBottom="@dimen/_16sdp"/>
            <TextView
                android:id="@+id/textTutorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sanspro_reguler"
                android:textSize="@dimen/_14sdp"
                android:textAlignment="center"
                android:textColor="@color/black3333"
                android:text="@string/firstTutorial"/>

        </LinearLayout>

    </FrameLayout>
</layout>