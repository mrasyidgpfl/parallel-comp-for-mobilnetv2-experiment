<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fasilkom.kotlin.sibipenerjemah">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:requestLegacyExternalStorage="true"
        android:name="com.fasilkom.kotlin.sibipenerjemah.BaseApplication"
        android:extractNativeLibs="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label= "@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:theme">
        <activity android:name="com.fasilkom.kotlin.sibipenerjemah.MainActivity">
        </activity>

        <activity android:name="com.fasilkom.kotlin.sibipenerjemah.ui.signtotext.PickerActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

        <activity android:name="com.fasilkom.kotlin.sibipenerjemah.ui.result.ResultActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.fasilkom.kotlin.sibipenerjemah.ui.texttosign.GestureGenerationActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>

        <activity
            android:name="com.fasilkom.kotlin.sibipenerjemah.ui.camera.CameraActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.fasilkom.kotlin.sibipenerjemah.ui.homepage.HomepageActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.fasilkom.kotlin.sibipenerjemah.ui.result.CameraResultActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait" />

    </application>

</manifest>